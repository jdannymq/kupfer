<?xml version="1.0" encoding="iso-8859-1" ?>
<ui:composition xmlns="http://www.w3.org/1999/xhtml"
	xmlns:ui="http://java.sun.com/jsf/facelets"
	xmlns:f="http://java.sun.com/jsf/core"
	xmlns:h="http://java.sun.com/jsf/html"
	xmlns:c="http://java.sun.com/jstl/core"
	xmlns:a="http://richfaces.org/a4j"
	xmlns:p="http://primefaces.prime.com.tr/ui"
	xmlns:rich="http://richfaces.org/rich"
	xmlns:s="http://jboss.com/products/seam/taglib">
	
	<rich:modalPanel id="mpSolicitudUsuariosGlobalVer" autosized="true" width="800">
		<f:facet name="header">
			<h:outputText value="Consulta de Usuarios para (Aprobar o Rechazar)"	style="padding-right:15px;" />
		</f:facet>
		<f:facet name="controls">
			<h:panelGroup>
				<h:form>
					<a:commandLink>
						<h:graphicImage value="img/close.png" styleClass="hidelink"	id="mpSolicitudUsuariosGlobalVerlink" />
					</a:commandLink>
					<rich:componentControl for="mpSolicitudUsuariosGlobalVer"
						attachTo="mpSolicitudUsuariosGlobalVerlink" operation="hide"
						event="onclick" />
				</h:form>
			</h:panelGroup>
		</f:facet>
		<h:form id = "frm_solicitud_usuario_derivado_global_ver">
	    <a:outputPanel id="datos">
		<rich:panel>
			<f:facet name="header"><h:outputText value="Información de Solicitud"	style="padding-right:15px;" /></f:facet>	
				<table cellpadding="0" cellspacing="0" width="100%">
					<tr valign="top">
						<td>N°</td>
						<td>Nombre</td>
						<td>Estado</td>
					</tr>
					<tr valign="top">
						<td>
						<h:inputText id="idNumSolicitud" 
								value="#{visualizarSolicitudAction.solicitudLogHitos.id.numSolicitud}" 
					          required="false"  
						       maxlength="10"
						       size="10" 
						       disabled="true"/>						
						</td>
						<td>
						<h:inputText id="idNombreSolicitud" 
									value="#{visualizarSolicitudAction.solicitudLogHitos.nomCliente}" 
						          required="false"  
							       maxlength="120"
							       size="50" 
							       disabled="true"/>						
						</td>
						<td>
						<h:inputText id="idEstadoSolicitud" 
									value="#{visualizarSolicitudAction.estadoLogHitos.desEstado}" 
						          required="false"  
							       maxlength="120"
							       size="50" 
							       disabled="true" />						
						</td>
					</tr>				
				</table>
		</rich:panel>


		<rich:panel>
				<f:facet name="header"><h:outputText value="Usuarios Asignados"	style="padding-right:15px;" /></f:facet>
				<a:outputPanel id="grillaUsuariosDerivadas">
		    	<div class="results" id="grillaUsuarioAsigandos" style="height:380px; overflow: auto;">
			   		<h:outputText value="No existe ningun usuario asigando ha esta solicitud en esta solicitud." 
			   		           rendered="#{empty visualizarSolicitudAction.listUsuariosDerivados}"/>
				    <rich:dataTable id="idlistaUsuarioAsignados"
				                var="_bbb"
				              value="#{visualizarSolicitudAction.listUsuariosDerivados}"
				           rendered="#{not empty visualizarSolicitudAction.listUsuariosDerivados}">
				        <rich:column>
				            <f:facet name="header">Usuario</f:facet>
				            <h:outputText value="#{_bbb.usuario.nombre}"/>
				        </rich:column>
				        <rich:column>
				            <f:facet name="header">Fecha - Hora</f:facet>
				            <h:outputText value="#{_bbb.fechaHora}">
				            	<s:convertDateTime pattern="dd-MM-yyyy HH:mm" />
				            </h:outputText>
				        </rich:column>
				        <rich:column width="50px;">
				            <f:facet name="header">Obligatorios</f:facet>
				            <h:outputText value="Obligatorio" rendered="#{_bbb.confirmacionObligatoria == true}" />
				            <h:outputText value="No Obligatorio" rendered="#{_bbb.confirmacionObligatoria == false}" />
				        </rich:column>
				        
				        
				        <rich:column style="text-align:center;">
				            <f:facet name="header">Situación Actual</f:facet>
							 <table cellpadding="0" cellspacing="0" width="100%" align="center">
							 	<tr valign="top">
							 		<td align="center" width="50px;"> 
										<s:fragment rendered="#{_bbb.estado.codEstado == 'B' or  _bbb.estado.codEstado == 'SA' }">
											<!-- en espera  -->	
											<img src="./img/esperaIcon_tcolor.png" title="En Espera..."/>								
										</s:fragment>
										
										<s:fragment rendered="#{_bbb.estado.codEstado == 'AP'}">
											<!-- condirmada  -->
											<img src="./img/true.png" title="Aprobada"  />
										</s:fragment>
										<s:fragment rendered="#{_bbb.estado.codEstado == 'RP'}">
											<!-- No Confirmada  -->
											<img src="./img/false.png" title="Rechazada"/>
										</s:fragment>
							 		</td>
							 		<td width="10px;" align="left"> 
							 			<rich:separator width="2" height="14" style="color:#2B00FF;" />
							 		</td>								 		
							 		<td align="left">
							        	<s:fragment rendered="#{_bbb.estado.codEstado == 'SA'}">
								            <s:fragment rendered="#{_bbb.estado.codEstado == 'SA'}">
								            	<h:outputText value="Pendiente de aprobación o rechazo de la solicitud"/>
								            </s:fragment>	
								            <s:fragment rendered="#{_bbb.estado.codEstado != 'SA'}">
								            	<h:outputText value="#{_bbb.estado.desEstado}"/>
								            </s:fragment>	
							        	</s:fragment> 
							        	<s:fragment rendered="#{_bbb.estado.codEstado == 'B'}">
								            <s:fragment rendered="#{_bbb.estado.codEstado == 'B'}">
								            	<h:outputText value="Pendiente de analisis de la solicitud"/>
								            </s:fragment>	
								            <s:fragment rendered="#{_bbb.estado.codEstado != 'B'}">
								            	<h:outputText value="#{_bbb.estado.desEstado}"/>
								            </s:fragment>					        	
							        	</s:fragment> 
							        	<s:fragment rendered="#{_bbb.estado.codEstado != 'B' and _bbb.estado.codEstado != 'SA'}">
							        		<s:fragment rendered="#{_bbb.codEstadoDerivada == 'B'}">
							        			<h:outputText value="Analisada"/>
							        		</s:fragment>
							        		<s:fragment rendered="#{_bbb.codEstadoDerivada != 'B' or _bbb.codEstadoDerivada == null }">
							        			<h:outputText value="#{_bbb.estado.desEstado}"/>
							        		</s:fragment>
							        	</s:fragment> 								 		
							 		</td>
							 	</tr>
							 </table>
				        </rich:column>
				        
				        
				    </rich:dataTable>
			    </div>
				</a:outputPanel>
		</rich:panel>
	 </a:outputPanel>
   	</h:form>

	</rich:modalPanel>
	
</ui:composition>